}
<div class="breadcrumb-area">
    <div class="container">
        <ol class="breadcrumb breadcrumb-list">
            <li class="breadcrumb-item"><a href="https://www.astaberry.com">Home</a></li>
            <li class="breadcrumb-item active">Login</li>
        </ol>
    </div>
</div>
<!-- Breadcrumb Area End Here -->
<!-- Login Page Start Here -->
<div class="login ptb-90">
    <div class="container">
        <h3 class="login-header">Log in to your account </h3>
        <div class="row">
            <div class="col-xl-6 col-lg-8 offset-xl-3 offset-lg-2">
                <div class="login-form">
                    <form asp-page-handler="Login" method="post" asp-page="Login">
                        <div class="form-group row">
                            <label for="email" class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control" asp-for="Admin.EmailId" name="name" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
                            <div class="col-sm-7">
                                <input type="password" class="form-control" asp-for="Admin.Password" name="Password" placeholder="Password">
                               
                            </div>
                        </div>
                        <div class="login-details text-center mb-25">                            
                            <button type="submit" class="login-btn">Sign in</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login Page End Here -->