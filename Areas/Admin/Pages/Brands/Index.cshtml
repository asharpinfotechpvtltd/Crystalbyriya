@foreach (var item in Model.TblBrand) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brandname)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Brandid">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Brandid">Details</a> |
