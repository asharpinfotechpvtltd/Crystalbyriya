@model Astaberry.Areas.Admin.Pages.Brands.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Brand LIst</h1>

<p>
    <a asp-page="Create">Create New Brand</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblBrand[0].Brandname)
            </th>
            <th></th>
        </tr>
    </thead>
