@page
@model Astaberry.Areas.Admin.Pages.Range.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Range List</h1>

<p>
    <a asp-page="Create">Create New Range</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblRange[0].Range)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblRange[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblRange) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Range)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
