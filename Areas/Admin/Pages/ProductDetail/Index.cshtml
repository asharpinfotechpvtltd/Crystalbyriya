@page
@model Astaberry.Areas.Admin.Pages.ProductDetail.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Product Detail List</h1>

<p>
    <a asp-page="Create">Create New Product Detail</a>
</p>
<div class="form-group">
    <form asp-page-handler="Search" method="post" asp-page="Index">
        <table class="table table-responsive"><tr><td>Sku Code</td><td><input type="text" class="form-control" name="Skucode" /></td><td><input type="submit" value="Search" class="btn btn-primary" /></td></tr></table>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
               Skucode
            </th>
            <th>
                ProductName
            </th>
            <th>Stock</th>
            <th>Price</th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblProduct) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Skucode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
           <td>@item.QTY</td>
           <td>@item.Price</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
