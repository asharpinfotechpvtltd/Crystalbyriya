@page
@model Astaberry.Areas.Admin.Pages.Banners.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Banners</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Desktop Image Name</label>
                <input asp-for="TblBanners.DesktopImageName" type="file" name="DesktopImageNames" class="form-control" />
                <span asp-validation-for="TblBanners.DesktopImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mobile Image Name</label>
                <input asp-for="TblBanners.MobileImageName" type="file" name="MobileImageNames" class="form-control" />
                <span asp-validation-for="TblBanners.MobileImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Navigate To</label>
                <select name="Navigateto" class="form-control">
                    <option value="0">Select</option>
                    <option value="1">Category</option>
                    <option value="2">Range</option>
                </select>
                <span asp-validation-for="TblBanners.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblBanners.CategoryName" class="control-label"></label>
                <select asp-for="TblBanners.CategoryName" asp-items="Model.Options" name="CategoryName" class="form-control">
                    <option>Select</option>
                </select>
                <span asp-validation-for="TblBanners.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblBanners.SubCategoryName" class="control-label"></label>
                <select asp-for="TblBanners.SubCategoryName" name="SubCategoryName" asp-items="Model.SubCatOptions" class="form-control">
                    <option>Select</option>
                </select>
                <span asp-validation-for="TblBanners.SubCategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblBanners.Alt" class="control-label"></label>
                <input asp-for="TblBanners.Alt" name="Alt" class="form-control" />
                <span asp-validation-for="TblBanners.Alt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(document).ready(function () {
        $("#Upload").hide();
        $("#url").hide();
        $("select").change(function () {
            var type = $("#type").val();
            if (type == 0) {
                $("#Upload").show();
                $("#url").hide();
            }
            else if (type == 1) {
                $("#Upload").hide();
                $("#url").show();
            }
        });
    });

</script>
}
