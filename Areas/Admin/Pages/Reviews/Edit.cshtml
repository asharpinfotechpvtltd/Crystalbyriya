@page
@model Astaberry.Areas.Admin.Pages.Reviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Review</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblReview.Id" />
            <div class="form-group">
                <label asp-for="TblReview.Productid" class="control-label"></label>
                <input asp-for="TblReview.Productid" class="form-control" />
                <span asp-validation-for="TblReview.Productid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblReview.Reviews" class="control-label"></label>
                <input asp-for="TblReview.Reviews" class="form-control" />
                <span asp-validation-for="TblReview.Reviews" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TblReview.IsApproved" /> @Html.DisplayNameFor(model => model.TblReview.IsApproved)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TblReview.Rating" class="control-label"></label>
                <input asp-for="TblReview.Rating" class="form-control" />
                <span asp-validation-for="TblReview.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblReview.Emailid" class="control-label"></label>
                <input asp-for="TblReview.Emailid" class="form-control" />
                <span asp-validation-for="TblReview.Emailid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblReview.Name" class="control-label"></label>
                <input asp-for="TblReview.Name" class="form-control" />
                <span asp-validation-for="TblReview.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
