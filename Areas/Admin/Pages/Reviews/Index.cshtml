@page
@model Astaberry.Areas.Admin.Pages.Reviews.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Review List</h1>

<p>
    <a asp-page="Create">Create New Review</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblReview[0].Productid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblReview[0].Reviews)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblReview[0].IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblReview[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblReview[0].Emailid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblReview[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblReview) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Productid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reviews)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emailid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
