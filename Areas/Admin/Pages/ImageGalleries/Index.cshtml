@page
@model Astaberry.Areas.Admin.Pages.ImageGalleries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Image List</h1>

<p>
    <a asp-page="Create">Create New Image Gallery</a>
</p>
<div class="form-group">
    <form asp-page-handler="Search" method="post" asp-page="Index">
        <table class="table table-responsive"><tr><td>Sku Code</td><td><input type="text" class="form-control" name="Skucode" /></td><td><input type="submit" value="Search" class="btn btn-primary" /></td></tr></table>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblImageGallery[0].Productid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblImageGallery[0].Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblImageGallery[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblImageGallery)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Productid)
            </td>
            <td>
                <img src="~/img/products/@item.Url" height="100px" width="100px" />                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
