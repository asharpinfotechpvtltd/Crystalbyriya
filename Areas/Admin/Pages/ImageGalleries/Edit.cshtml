@page
@model Astaberry.Areas.Admin.Pages.ImageGalleries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Image Gallery</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblImageGallery.Id" />
            <div class="form-group">
                <label asp-for="TblImageGallery.Productid" class="control-label"></label>
                <input asp-for="TblImageGallery.Productid" class="form-control" />
                <span asp-validation-for="TblImageGallery.Productid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblImageGallery.Url" class="control-label"></label>
                <input asp-for="TblImageGallery.Url" class="form-control" />
                <span asp-validation-for="TblImageGallery.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblImageGallery.Type" class="control-label"></label>
                <input asp-for="TblImageGallery.Type" class="form-control" />
                <span asp-validation-for="TblImageGallery.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
