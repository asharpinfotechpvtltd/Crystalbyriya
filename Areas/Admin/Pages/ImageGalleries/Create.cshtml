@page
@model Astaberry.Areas.Admin.Pages.ImageGalleries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Image Gallery</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblImageGallery.Productid" class="control-label"></label>
                <input asp-for="TblImageGallery.Productid" class="form-control" name="Productid" />
                <span asp-validation-for="TblImageGallery.Productid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblImageGallery.Type" class="control-label"></label>
                <select class="form-control" name="imgtype" id="type"><option>Select</option><option value="0">Image</option><option value="1">Video</option></select>
                <span asp-validation-for="TblImageGallery.Type" class="text-danger"></span>
            </div>
            <div class="form-group" id="Upload">
                <label asp-for="TblImageGallery.Url" class="control-label"></label>
                <input asp-for="TblImageGallery.Url" class="form-control" type="file"  name="Upload" />
                <span asp-validation-for="TblImageGallery.Url" class="text-danger"></span>
            </div>
            <div class="form-group" id="url">
                <label asp-for="TblImageGallery.Url" class="control-label"></label>
                <input asp-for="TblImageGallery.Url" class="form-control" id="UrlBox" name="UrlBox" />
                <span asp-validation-for="TblImageGallery.Url" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(document).ready(function () {
        $("#Upload").hide();
        $("#url").hide();
        $("select").change(function () {
            var type = $("#type").val();
            if (type == 0) {
                $("#Upload").show();
                $("#url").hide();
            }
            else if (type == 1) {
                $("#Upload").hide();
                $("#url").show();
            }
        });
    });
    
</script>
    }
