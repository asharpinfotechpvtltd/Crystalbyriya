@page
@model Astaberry.Areas.Admin.Pages.StoreFinders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Store List</h1>

<p>
    <a asp-page="Create">Create New Store</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TblStoreFinder[0].Stateid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblStoreFinder[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblStoreFinder[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TblStoreFinder[0].StoreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TblStoreFinder) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Stateid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StoreId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StoreId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StoreId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
