@page
@model Astaberry.Areas.Admin.Pages.OfferImages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Offer Image</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblOffersImage.Image" class="control-label">Image 692*384</label>
                <input asp-for="TblOffersImage.Image" class="form-control" type="file" name="Offers" />
                <span asp-validation-for="TblOffersImage.Image" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" name="Enabled" asp-for="TblOffersImage.Enable" /> @Html.DisplayNameFor(model => model.TblOffersImage.Enable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
