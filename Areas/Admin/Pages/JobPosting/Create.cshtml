@page
@model Astaberry.Areas.Admin.Pages.JobPosting.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Job</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblJobPostings.Position" class="control-label"></label>
                <input asp-for="TblJobPostings.Position" type="text" class="form-control" />
                <span asp-validation-for="TblJobPostings.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblJobPostings.Exp" class="control-label"></label>
                <input asp-for="TblJobPostings.Exp" type="text" class="form-control" />
                <span asp-validation-for="TblJobPostings.Exp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblJobPostings.JobDescription" class="control-label"></label>
                <input asp-for="TblJobPostings.JobDescription" type="text" class="form-control" />
                <span asp-validation-for="TblJobPostings.JobDescription" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
